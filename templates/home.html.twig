{% extends 'base.html.twig' %}

{% block body %}
    {{ form_start(form) }}
        {{ form_label(form.expression) }}
        {{ form_errors(form) }}
        {{ form_widget(form.expression) }}
        <div id="editor" data-editor-configuration="{{ {
            'formSelector' : "[name='#{form.vars.name}']",
            'editorSourceSelector' : "##{form.expression.vars.id}",
        } | json_encode() }}"></div>
        {{ form_help(form) }}

        {{ form_widget(form.submit) }}
    {{ form_end(form) }}

    <pre>Result: {{ dump(result) }}</pre>
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script type="text/javascript" src="/js/rule-autocomplete.js"></script>
{% endblock %}
