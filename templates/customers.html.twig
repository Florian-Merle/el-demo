{% extends 'base.html.twig' %}

{% block body %}
    <h2>Customers</h2>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Eligible for discount</th>
            </tr>
      </thead>
      <tbody>
        {% for customer in customers %}
              <tr>
                 <th scope="row">{{ customer.customer.nom }}</th>
                 <td scope="row">{{ customer.eligiblePourBourse ? '✅' : '❌' }}</td>
              </tr>
        {% endfor %}
      </tbody>
    </table>
{% endblock %}
